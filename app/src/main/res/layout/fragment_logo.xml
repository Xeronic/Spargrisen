<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="xeronic.org.majja.p1.LogoFragment"
    android:orientation="vertical"
    android:gravity="bottom">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/application_name_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal|bottom"
        android:maxHeight="100sp"
        android:maxWidth="100sp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/application_name"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_above="@+id/show_result_activity_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:gravity="center_horizontal"
        android:layout_weight="0" />
</LinearLayout>
